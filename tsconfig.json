{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./assets/js/app",
    "allowJs": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6"
    ],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },	
  "globalDependencies": {
	  "site.js": "file:./src/site.d.ts",
	  "spectrum-colorpicker2": "file:./src/types/spectrum-colorpicker2/index.d.ts",
	  "pixijs-grid": "file:./src/types/pixijs-grid/index.d.ts"
  },
  "include": [
    "src/**/*",
    "lib/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}